            "args": ["-config", "${workspaceFolder}/docker-compose/2data1inv/InventoryService/extConfig/config.json"],
        },
        {
            "name": "Debug Data Service",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/app/DataService/main.go",
            "args": ["-config", "${workspaceFolder}/docker-compose/2data1inv/DataService02/extConfig.json"],
        },
        {
            "name": "Debug Inv Admin",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/tool/InventoryServiceAdmin/main.go",
            "args": ["sync", "-config", "${workspaceFolder}/docker-compose/2data1inv/InventoryService/extConfig/config.json"],
        }
    ]
